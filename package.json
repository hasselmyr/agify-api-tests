{
  "name": "agify-api-tests",
  "version": "1.0.0",
  "description": "BDD tests for agify.io API",
  "scripts": {
    "test": "cucumber-js",
    "test:core": "cucumber-js --tags \"not @rate_limited and not @skip\"",
    "test:functional": "cucumber-js --tags \"not @security and not @skip\"",
    "test:security": "cucumber-js --tags @security",
    "test:rate-limited": "cucumber-js --tags @rate_limited",
    "test:all": "cucumber-js --tags \"not @skip\"",
    "test:report": "cucumber-js --format html:reports/cucumber-report.html"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@types/node": "^20.11.5",
    "axios": "^1.6.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
